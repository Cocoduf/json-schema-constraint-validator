{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Transaction",
	"type": "object",
	"properties": {
		"firstNumber": {
			"type": "number",
			"minimum": 0,
			"constraints": [
				{
					"type": "valueEqualTo",
					"target": "#/secondNumber"
				}
			]
		},
		"secondNumber": {
			"type": "number",
			"minimum": 0,
			"constraints": [
				{
					"type": "valueEqualTo",
					"target": "#/firstNumber"
				}
			]
		},
		"person": {
			"type": "object",
			"properties": {
				"firstName": {
					"type": "string"
				},
				"lastName": {
					"type": "string"
				}
			}
		}
	},
	"required" : ["firstNumber","secondNumber"]
}
